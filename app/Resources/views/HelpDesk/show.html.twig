{# app/Resources/views/HelpDesk/show.html.twig #}
{% extends "base.html.twig" %}
{% trans_default_domain 'AppBundle' %}

{% block title %} HelpDesk-show {% endblock %}
{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="container contenedor">
		<div class="row">
       		<div class="col-xs-12">
       			<div class="col-xs-12 col-sm-12">
    				<p style="padding:10px;"></p>
    			</div>
				<ol class="breadcrumb">
		        	<li><a href="{{ path('index') }}">{{ 'bread.home' | trans }}</a></li>
		        	<li><a href="{{ path('user') }}">{{ 'bread.help' | trans }}</a></li>
		            <li>{{ 'bread.show' | trans }}</li>
		       	</ol>
		    </div>
		</div>
		<h2>{{ 'table.tec' | trans }} {{ helpdesk.username }}</h2>
		<hr>
		<a href="{{ path('user') }}"><button type="button" class="btn btn-default">Atras</button></a>
		<hr>
		<table class="table">
			<tbody>
					<tr><th><i class="fa fa-user fa-2x"></th><td>{{ helpdesk.id }}</td></tr>
					<tr><th>{{ 'table.username' | trans }}</th><td>{{ helpdesk.username }}</td></tr>
					<tr><th>{{ 'table.surname' | trans }}</th><td>{{ helpdesk.surname }}</td></tr>
					<tr><th>DNI</th><td>{{ helpdesk.dni }}</td></tr>
					<tr><th><i class="fa fa-at fa-2x"></th><td>{{ helpdesk.email }}</td></tr>
					<tr><th><i class="fa fa-phone-square fa-2x"></th><td>{{ helpdesk.phone }}</td></tr>
					<tr><th>{{ 'table.address' | trans }}</th><td>{{ helpdesk.address }}</td></tr>
					<tr><th>{{ 'table.idiom' | trans }}</th><td>	{% for idiom in helpdesk.idioma %}
												{{ idiom }},
											{% endfor %}
											</td></tr>
					<tr><th>{{ 'table.admin' | trans }}</th><td>{{ helpdesk.administrador.username }}</td></tr>			</tbody>
		</table>
		<hr>
	</div>

{% endblock %}
{% block javascripts %}{% endblock %}