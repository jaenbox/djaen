{# app/Resources/views/Usuario/default.html.twig #}

{% extends 'base.html.twig' %}
{% trans_default_domain 'AppBundle' %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block title %}Usuarios del sistema{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
       		<div class="col-xs-12">
       			<div class="col-xs-12 col-sm-12">
    				<p style="padding:10px;"></p>
    			</div>
				<ol class="breadcrumb">
		        	<li><a href="{{ path('index') }}">{{ 'bread.home' | trans }}</a></li>
		            <li>{{ 'bread.users' | trans }}</li>
		       	</ol>
		    </div>
		</div>
		<div class="row">
			<div class="col-xs-12 col-sm-12">
				<h2>{{ 'users.users' | trans }}</h2>
				<hr>
				<p>{{ 'users.management' | trans }}</p>
				<hr>
				<ul class="nav nav-tabs">
					<li class="active"><a data-toggle="tab" href="#sectionA">{{ 'table.client' | trans }}</a></li>
					<li><a data-toggle="tab" href="#sectionB">{{ 'table.help' | trans }}</a></li>
					<li><a data-toggle="tab" href="#sectionC">{{ 'table.tec' | trans }}</a></li>
					<li><a data-toggle="tab" href="#sectionD">{{ 'table.admin' | trans }}</a></li>
				</ul>
				<div class="tab-content">
        			<div id="sectionA" class="tab-pane fade in active">
        				<h2>{{ 'table.client' | trans }}</h2>
        				<a href="{{ path('newCliente') }}"><button type="button" class="btn btn-default">{{ 'table.buttonN' | trans }}</button></a>
						<hr>
						<table class="table table-striped">
							<tbody>
								<thead>
									<tr>
										<td>Id</td>
										<td>{{ 'table.username' | trans }}</td>
										<td>{{ 'table.surname' | trans }}</td>
										<td>{{ 'table.phone' | trans }}</td>
										<td>{{ 'table.email' | trans }}</td>
										<td>{{ 'table.edit' | trans }}</td>
										<td>{{ 'table.delete' | trans }}</td>
									</tr>
								</thead>
									{% for cliente in clientes %}
										<tr>
											<td><a href="{{
												path(
													'showCliente',
													{ 'id': cliente.id }
												)
												}}">
												{{ cliente.id }}</a></td>
											<td>{{ cliente.username }}</td>
											<td>{{ cliente.surname }}</td>
											<td>{{ cliente.phone }}</td>
											<td>{{ cliente.email }}</td>

											<td><a href="{{
												path(
													'editCliente',
													{ 'id': cliente.id }
												)
												}}"><i class="fa fa-pencil-square-o"></i></a></td>
											<td><a href="{{
												path(
													'deleteCliente',
													{ 'id': cliente.id }
												)
												}}" onclick="return confirm('Are you sure?')"><i class="fa fa-trash fa-lg"></i></a></td>

										</tr>
									{% endfor %}
							</tbody>
						</table>
        			</div>
        			<div id="sectionB" class="tab-pane fade">
        				<h2>Help Desk</h2>
        				<a href="{{ path('newHelpDesk') }}"><button type="button" class="btn btn-default">{{ 'table.buttonN' | trans }}</button></a>
						<hr>
						<table class="table table-striped">
							<tbody>
								<thead>
									<tr>
										<td>Id</td>
										<td>{{ 'table.username' | trans }}</td>
										<td>{{ 'table.surname' | trans }}</td>
										<td>{{ 'table.phone' | trans }}</td>
										<td>{{ 'table.email' | trans }}</td>
										<td>{{ 'table.edit' | trans }}</td>
										<td>{{ 'table.delete' | trans }}</td>
									</tr>
								</thead>
									{% for helpdesk in helpdesks%}
										<tr>
											<td><a href="{{
												path(
													'showHelpDesk',
													{ 'id': helpdesk.id }
												)
												}}">
												{{ helpdesk.id }}</a></td>
											<td>{{ helpdesk.username }}</td>
											<td>{{ helpdesk.surname }}</td>
											<td>{{ helpdesk.phone }}</td>
											<td>{{ helpdesk.email }}</td>
											<td><a href="{{
												path(
													'editHelpDesk',
													{ 'id': helpdesk.id }
												)
												}}"><i class="fa fa-pencil-square-o"></i></a></td>
											<td><a href="{{
												path(
													'deleteHelpDesk',
													{ 'id': helpdesk.id }
												)
												}}" onclick="return confirm('Are you sure?')"><i class="fa fa-trash fa-lg"></i></a></td>
										</tr>
									{% endfor %}
							</tbody>
						</table>
        			</div>
        			<div id="sectionC" class="tab-pane fade">
        				<h2>Tecnico</h2>
        				<a href="{{ path('newTecnico') }}"><button type="button" class="btn btn-default">{{ 'table.buttonN' | trans }}</button></a>
						<hr>
						<table class="table table-striped">
							<tbody>
								<thead>
									<tr>
										<td>Id</td>
										<td>{{ 'table.username' | trans }}</td>
										<td>{{ 'table.surname' | trans }}</td>
										<td>{{ 'table.phone' | trans }}</td>
										<td>{{ 'table.email' | trans }}</td>
										<td>{{ 'table.edit' | trans }}</td>
										<td>{{ 'table.delete' | trans }}</td>
									</tr>
								</thead>
									{% for tecnico in tecnicos%}
										<tr>
											<td><a href="{{
												path(
													'showTecnico',
													{ 'id': tecnico.id }
												)
												}}">
												{{ tecnico.id }}</a></td>
											<td>{{ tecnico.username }}</td>
											<td>{{ tecnico.surname }}</td>
											<td>{{ tecnico.phone }}</td>
											<td>{{ tecnico.email }}</td>
											<td><a href="{{
												path(
													'editTecnico',
													{ 'id': tecnico.id }
												)
												}}"><i class="fa fa-pencil-square-o"></i></a></td>
											<td><a href="{{
												path(
													'deleteTecnico',
													{ 'id': tecnico.id }
												)
												}}" onclick="return confirm('Are you sure?')"><i class="fa fa-trash fa-lg"></i></a></td>
										</tr>
									{% endfor %}
							</tbody>
						</table>
        			</div>
        			<div id="sectionD" class="tab-pane fade">
						<h2>Administrador</h2>
        				<a href="{{ path('newAdministrador') }}"><button type="button" class="btn btn-default">{{ 'table.buttonN' | trans }}</button></a>
						<hr>
						<table class="table table-striped">
							<tbody>
								<thead>
									<tr>
										<td>Id</td>
										<td>{{ 'table.username' | trans }}</td>
										<td>{{ 'table.surname' | trans }}</td>
										<td>{{ 'table.phone' | trans }}</td>
										<td>{{ 'table.email' | trans }}</td>
										<td>{{ 'table.edit' | trans }}</td>
										<td>{{ 'table.delete' | trans }}</td>

									</tr>
								</thead>
									{% for admin in admins%}
										<tr>
											<td><a href="{{
												path(
													'showAdministrador',
													{ 'id': admin.id }
												)
												}}">
												{{ admin.id }}</a></td>
											<td>{{ admin.username }}</td>
											<td>{{ admin.surname }}</td>
											<td>{{ admin.phone }}</td>
											<td>{{ admin.email }}</td>

											<td><a href="{{
												path(
													'editAdministrador',
													{ 'id': admin.id }
												)
												}}"><i class="fa fa-pencil-square-o"></i></a></td>
											<td><a href="{{
												path(
													'deleteAdministrador',
													{ 'id': admin.id }
												)
												}}" onclick="return confirm('Are you sure?')"><i class="fa fa-trash fa-lg"></i></a></td>
										</tr>
									{% endfor %}
							</tbody>
						</table>
        			</div>
        		</div>
				<hr>
			</div>
		</div>
	</div>
{% endblock %}